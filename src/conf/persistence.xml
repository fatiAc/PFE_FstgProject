<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="Pfe_FstgProjectPU" transaction-type="JTA">
    <jta-data-source>java:app/pfe_fstgProject</jta-data-source>
    <class>bean.Article</class>
    <class>bean.Departement</class>
    <class>bean.Enseignant</class>
    <class>bean.Filiere</class>
    <class>bean.Laboratoire</class>
    <class>bean.Module</class>
    <class>bean.Ouvrage</class>
    <class>bean.Rubrique</class>
    <class>bean.Semestre</class>
    <class>bean.EquipeRecherche</class>
    <class>bean.Etudiant</class>
    <class>bean.ThemeRecherche</class>
    <class>bean.Message</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
